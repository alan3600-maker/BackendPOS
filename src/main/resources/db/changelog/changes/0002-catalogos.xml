<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog
    https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd">

  <changeSet id="0002-001-create-categoria" author="hidraulica">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="categoria"/>
      </not>
    </preConditions>

    <createTable tableName="categoria">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="nombre" type="varchar(120)">
        <constraints nullable="false"/>
      </column>

      <column name="activo" type="boolean" defaultValueBoolean="true">
        <constraints nullable="false"/>
      </column>

      <column name="created_at" type="timestamptz">
        <constraints nullable="false"/>
      </column>

      <column name="updated_at" type="timestamptz">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addUniqueConstraint tableName="categoria" columnNames="nombre" constraintName="uk_categoria_nombre"/>
  </changeSet>

  <changeSet id="0002-002-create-marca" author="hidraulica">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="marca"/>
      </not>
    </preConditions>

    <createTable tableName="marca">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="nombre" type="varchar(120)">
        <constraints nullable="false"/>
      </column>

      <column name="activo" type="boolean" defaultValueBoolean="true">
        <constraints nullable="false"/>
      </column>

      <column name="created_at" type="timestamptz">
        <constraints nullable="false"/>
      </column>

      <column name="updated_at" type="timestamptz">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addUniqueConstraint tableName="marca" columnNames="nombre" constraintName="uk_marca_nombre"/>
  </changeSet>

  <changeSet id="0002-003-create-proveedor" author="hidraulica">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="proveedor"/>
      </not>
    </preConditions>

    <createTable tableName="proveedor">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="nombre_razon_social" type="varchar(160)">
        <constraints nullable="false"/>
      </column>

      <column name="ruc" type="varchar(30)"/>
      <column name="telefono" type="varchar(30)"/>
      <column name="direccion" type="varchar(200)"/>

      <column name="activo" type="boolean" defaultValueBoolean="true">
        <constraints nullable="false"/>
      </column>

      <column name="created_at" type="timestamptz">
        <constraints nullable="false"/>
      </column>

      <column name="updated_at" type="timestamptz">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

</databaseChangeLog>
